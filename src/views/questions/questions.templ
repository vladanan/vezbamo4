							<p>
								{views.Translate(store, r, "Questions1-text")}
							</p>
						</div>
					</a>

					<a href="/questions" class="swiper-slide cursor-alias" style="background-image: url(static/zachary-nelson-98Elr-LIvD8-unsplash-1280_C.jpg);">
